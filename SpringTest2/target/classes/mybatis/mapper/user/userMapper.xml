<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<!-- mybatis mapper파일 -->

<mapper namespace="userMapper">
	<!-- 회원가입 -->
	<insert id="insertUsersOne" parameterType="user">
		insert into users(id, pw, nick)
		values(#{id}, #{pw}, #{nick})
	</insert>
	
	<!-- 로그인 -->
	<select id="selectUsersOne" parameterType="user" resultType="user">
		select * from users where id = #{id}
	</select>
	
	<!-- 아이디 중복 확인 -->
	<select id="selectUserCntById" parameterType="String" resultType="int">
		select count(*) from users where id = #{id}
	</select>
</mapper>