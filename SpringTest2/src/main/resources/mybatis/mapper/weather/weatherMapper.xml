<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<!-- mybatis mapper파일 -->

<mapper namespace="weatherMapper">
	
	<insert id="insertWeather" parameterType="java.util.List">
		insert into weather(
			base_date,
			base_time,
			category,
			nx,
			ny,
			obsr_value
		)values
		<foreach collection="list" item="weather" separator=",">
		(
			#{weather.baseDate},
			#{weather.baseTime},
			#{weather.category},
			#{weather.nx},
			#{weather.ny},
			#{weather.obsrValue},
		)
		</foreach>
	</insert>
	
	<!-- 특정 게시글의 파일 목록 조회 -->
	<select id="selectFileByBno" parameterType="int" resultType="file">
		select * from file where bno = #{bno}
	</select>
	
</mapper>